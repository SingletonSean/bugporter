<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Bugporter.Client.Pages.SignIn.SignInView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:link="clr-namespace:Bugporter.Client.Shared.Link"
    xmlns:signinfeature="clr-namespace:Bugporter.Client.Features.SignIn"
    Title="SignInView">
    <ScrollView>
        <VerticalStackLayout Padding="25" MaximumWidthRequest="800">
            <Label FontSize="Large" Text="Sign In" />
            <signinfeature:SignInFormView Margin="0,25,0,0" BindingContext="{Binding SignInFormViewModel}" />
            <link:Link Route="//SignUp" Text="Need an account? Sign up" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>