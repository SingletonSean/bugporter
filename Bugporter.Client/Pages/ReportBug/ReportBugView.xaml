<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Bugporter.Client.Pages.ReportBug.ReportBugView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:reportBug="clr-namespace:Bugporter.Client.Features.ReportBug"
    Title="ReportBugView">
    <ScrollView>
        <VerticalStackLayout Padding="25" MaximumWidthRequest="1000">
            <Label FontSize="Large" Text="Report a Bug" />
            <reportBug:ReportBugFormView Margin="0,25,0,0" BindingContext="{Binding ReportBugFormViewModel}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>